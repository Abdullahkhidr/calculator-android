<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">20dp</item>
        <item name="android:padding">27dp</item>
    </style>

    <style name="StyleOperationBtn" parent="StyleBtn">
        <item name="android:background">@drawable/btn_operation_style</item>
    </style>
</resources>